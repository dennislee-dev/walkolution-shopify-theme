<div class="section-wrap">
  <div class="image-wrap">
    {% render 'image-element',
      image: section.settings.image,
      alt: image.alt
    %}
  </div>
  <div class="text-content">
    <div class="title">{{ section.settings.title }}</div>
    <div class="icon-lists">
      {% for block in section.blocks %}
        <div class="icon-text-item">
          {{ block.settings.icon_svg }}
          <span>{{ block.settings.text }}</span>
        </div>
      {% endfor %}
    </div>
    <a class="button button--primary btn-try" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
  </div>
</div>

{% schema %}
{
  "name": "Image with text 1",
  "class": "image-with-text-section-1",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "name": "Icon and Text",
      "type": "icon",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG content"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}